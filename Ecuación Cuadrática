	cin>>a;
	cout<<"Ingrese B: "<<endl;
	cin>>b;
	cout<<"Ingrese C: "<<endl;
	cout<<"El resultado es: "<<endl;
	cout<<cuadrat1.ecuacion(a,b,c);
	_getch();
}
