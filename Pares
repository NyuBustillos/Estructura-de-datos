#include "stdafx.h"
#include <iostream>

using namespace std;

int main ()
{
  int x;
  int n;
  int p=0;
  cout<<"Ingrese numero entero"<<endl;
  cin>>n;
  while (n>0)
  {
    x=n%10;
    if (x%2==0)
    {
      cout<<x;
      cout<<"Es dígito es par"<<endl;
      p++;
    }
    n=n/10;
  }
  cout<<"Cantidad de números pares: "<<endl;
  cout<<p;
  return 0;
}
